<div class="admin-container">
  <div class="admin-header">
    <h1>User Management</h1>
    <%= link_to "← Back to Dashboard", admin_dashboard_path, class: "back-link" %>
  </div>

  <div class="users-table-container">
    <table class="users-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <span class="role-badge <%= user.role %>">
                <%= user.role.capitalize %>
              </span>
            </td>
            <td><%= user.created_at.strftime("%b %d, %Y") %></td>
            <td class="actions-cell">
              <% unless user.admin? %>
                <%= form_with url: admin_update_user_role_path(user), method: :patch, local: true, class: 'role-form' do %>
                  <%= select_tag :role, options_for_select([['Normal', 'normal'], ['Premium', 'premium'], ['Admin', 'admin']], user.role), class: 'role-select' %>
                  <%= button_tag type: 'submit', class: 'btn btn-sm btn-primary' do %>
                    <i class="fas fa-check"></i> Update
                  <% end %>
                <% end %>
                <%= button_to admin_delete_user_path(user), 
                    method: :delete, 
                    data: { confirm: "Are you sure you want to delete this user?" },
                    class: 'btn btn-sm btn-danger' do %>
                  <i class="fas fa-trash"></i> Delete
                <% end %>
              <% else %>
                <span class="admin-protected">
                  <i class="fas fa-lock"></i> Protected
                </span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

