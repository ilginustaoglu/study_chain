<div class="admin-container">
  <div class="admin-header">
    <h1>Admin Dashboard</h1>
    <p>Welcome back, <%= current_user.name %>!</p>
  </div>

  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-users"></i>
      </div>
      <div class="stat-info">
        <h3><%= @users_count %></h3>
        <p>Total Users</p>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon premium">
        <i class="fas fa-crown"></i>
      </div>
      <div class="stat-info">
        <h3><%= @premium_users_count %></h3>
        <p>Premium Users</p>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon normal">
        <i class="fas fa-user"></i>
      </div>
      <div class="stat-info">
        <h3><%= @normal_users_count %></h3>
        <p>Normal Users</p>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon admin">
        <i class="fas fa-user-shield"></i>
      </div>
      <div class="stat-info">
        <h3><%= @admin_users_count %></h3>
        <p>Admin Users</p>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-sticky-note"></i>
      </div>
      <div class="stat-info">
        <h3><%= @notes_count %></h3>
        <p>Notes</p>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-clock"></i>
      </div>
      <div class="stat-info">
        <h3><%= @timers_count %></h3>
        <p>Timers</p>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-book"></i>
      </div>
      <div class="stat-info">
        <h3><%= @study_materials_count %></h3>
        <p>Study Materials</p>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-layer-group"></i>
      </div>
      <div class="stat-info">
        <h3><%= @flashcard_collections_count %></h3>
        <p>Flashcard Collections</p>
      </div>
    </div>
  </div>

  <div class="admin-actions">
    <%= link_to admin_users_path, class: 'btn btn-primary btn-large' do %>
      <i class="fas fa-users-cog"></i> Manage Users
    <% end %>
    <%= link_to root_path, class: 'btn btn-secondary btn-large' do %>
      <i class="fas fa-home"></i> Back to Home
    <% end %>
  </div>
</div>

