<div class="auth-container">
  <div class="auth-card">
    <h2>Create Your Account</h2>
    <p class="auth-subtitle">Join StudyChain to manage your learning journey</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'auth-form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, "Full Name" %>
        <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Enter your name' %>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email Address" %>
        <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: 'Enter your email' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <span class="password-hint">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Create a password' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirm your password' %>
      </div>

      <div class="form-group recaptcha-container">
        <%= recaptcha_tags %>
      </div>

      <div class="form-actions">
        <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
